import re

string = "The movie is titled Sniper (2017), and it's a great film."
pattern = r'\b\w+\s\(\d{4}\)'

matches = re.findall(pattern, string)
print(matches)

import re

string = "The movie is titled The Soccer fan (2012), I am not sure you will like it."
pattern = r'\b\w+\s+\(\d{4}\)'

matches = re.findall(pattern, string)
print(matches)

import re

